<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gameloft9.demo.dataaccess.dao.system.ProduceFormulaMapper">
    <resultMap id="BaseResultMap" type="com.gameloft9.demo.dataaccess.model.system.ProduceFormulaTest">
        <id column="ID" property="id" jdbcType="VARCHAR"/>
        <result column="PRODUCT_NAME" property="productName" jdbcType="VARCHAR"/>
        <result column="GOODS_TYPE" property="goodsType" jdbcType="INTEGER"/>
        <result column="CREATE_USER" property="createUser" jdbcType="VARCHAR"/>
        <result column="CREATE_TIME" property="createTime" jdbcType="DATE"/>
    </resultMap>

    <!--将数据库里所有字段打包好，嵌入下列的sql语句中-->
    <sql id="Base_Column_List">
        ID,PRODUCT_NAME,GOODS_TYPE,CREATE_USER,CREATE_TIME
    </sql>
    <!--查找所有-->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_produce_formula
    </select>
    <!--获取id-->
    <select id="getById" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_produce_formula t
        WHERE t.ID=#{id}
    </select>
    <!--添加-->
    <insert id="insert" parameterType="com.gameloft9.demo.dataaccess.model.system.ProduceFormulaTest">
        INSERT INTO t_produce_formula(ID,PRODUCT_NAME,GOODS_TYPE,CREATE_USER,CREATE_TIME)
        VALUES #{id},#{productname},#{goodstype},#{createuser},#{createtime}
    </insert>
    <!--删除-->
    <delete id="deleteById" parameterType="java.lang.String">
        DELETE FROM t_produce_formula
        WHERE ID = #{id}
    </delete>
    <!--修改-->
    <update id="updateById" parameterType="com.gameloft9.demo.dataaccess.model.system.ProduceFormulaTest">
        UPDATE t_produce_formula
        SET PRODUCT_NAME=#{productname},GOODS_TYPE=#{goodstype},CREATE_USER=#{createuser},
        CREATE_TIME=#{creayetime}
        WHERE ID = #{id}
    </update>
</mapper>
