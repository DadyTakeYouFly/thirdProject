<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gameloft9.demo.dataaccess.dao.system.ProduceFormulaDetailMapper">
    <resultMap id="BaseResultMap" type="com.gameloft9.demo.dataaccess.model.system.ProduceFormulaDetailTest">
        <id column="ID" property="id" jdbcType="VARCHAR"/>
        <result column="PRODUCT_FORMULA_ID" property="productFormulaId" jdbcType="VARCHAR"/>
        <result column="MATERIAL_ID" property="materialId" jdbcType="VARCHAR"/>
        <result column="MATERIAL_NUMBER" property="materialNumber" jdbcType="DATE"/>
    </resultMap>

    <!--将数据库里所有字段打包好，嵌入下列的sql语句中-->
    <sql id="Base_Column_List">
        ID,PRODUCT_FORMULA_ID,MATERIAL_ID,MATERIAL_NUMBER
    </sql>
    <!--查找所有-->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_produce_formula_detail
    </select>
    <!--获取id-->
    <select id="getById" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_produce_formula_detail t
        WHERE t.ID=#{id}
    </select>
    <!--添加-->
    <insert id="insert" parameterType="com.gameloft9.demo.dataaccess.model.system.ProduceFormulaDetailTest">
        INSERT INTO t_produce_formula_detail(ID,PRODUCT_FORMULA_ID,MATERIAL_ID,MATERIAL_NUMBER)
        VALUES #{id},#{productformulaid},#{materialid},#{materialnumber}
    </insert>
    <!--删除-->
    <delete id="deleteById" parameterType="java.lang.String">
        DELETE FROM t_produce_formula_detail
        WHERE ID = #{id}
    </delete>
    <!--修改-->
    <update id="updateById" parameterType="com.gameloft9.demo.dataaccess.model.system.ProduceFormulaDetailTest">
        UPDATE t_produce_formula_detail
        SET PRODUCT_FORMULA_ID=#{productformulaid},MATERIAL_ID=#{materialid},
        MATERIAL_NUMBER=#{materialnumber}
        WHERE ID = #{id}
    </update>
</mapper>
