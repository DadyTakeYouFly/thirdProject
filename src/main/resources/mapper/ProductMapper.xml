<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gameloft9.demo.dataaccess.dao.system.ProductMapper">
    <resultMap id="BaseResultMap" type="com.gameloft9.demo.dataaccess.model.system.ProductTest">
        <id column="ID" property="id" jdbcType="VARCHAR"/>
        <result column="PRODUCT_NAME" property="productName" jdbcType="VARCHAR"/>
        <result column="PRODUCT_TYPE" property="productType" jdbcType="INTEGER"/>
        <result column="PRODUCT_DESCRIBE" property="productDescribe" jdbcType="VARCHAR"/>
    </resultMap>

    <!--将数据库里所有字段打包好，嵌入下列的sql语句中-->
    <sql id="Base_Column_List">
        ID,PRODUCT_NAME,PRODUCT_TYPE,PRODUCT_DESCRIBE
    </sql>
    <!--查找所有-->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_produce
    </select>
    <!--获取id-->
    <select id="getById" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_produce t
        WHERE t.ID=#{id}
    </select>
    <!--添加-->
    <insert id="insert" parameterType="com.gameloft9.demo.dataaccess.model.system.ProductTest">
        INSERT INTO t_produce( ID,PRODUCT_NAME,PRODUCT_TYPE,PRODUCT_DESCRIBE)
        VALUES #{id},#{productname},#{producttype},#{productdescribe}
    </insert>
    <!--删除-->
    <delete id="deleteById" parameterType="java.lang.String">
        DELETE FROM t_produce
        WHERE ID = #{id}
    </delete>
    <!--修改-->
    <update id="updateById" parameterType="com.gameloft9.demo.dataaccess.model.system.ProductTest">
        UPDATE t_produce
        SET PRODUCT_NAME=#{productname},PRODUCT_TYPE=#{producttype},
        PRODUCT_DESCRIBE=#{productdescribe}
        WHERE ID = #{id}
    </update>
</mapper>
