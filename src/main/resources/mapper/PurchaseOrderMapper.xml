<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gameloft9.demo.dataaccess.dao.system.PurchaseOrderTest">
    <resultMap id="BaseResultMap" type="com.gameloft9.demo.dataaccess.model.system.PurchaseOrderTest">
        <id column="ID" property="id" jdbcType="VARCHAR"/>
        <result column="ID_NUMBER" property="idNumber" jdbcType="VARCHAR"/>
        <result column="GOODS_ID" property="goodsId" jdbcType="VARCHAR"/>
        <result column="GOODS_NUMBER" property="goodsNumber" jdbcType="VARCHAR"/>
        <result column="APPLY_USER" property="applyUser" jdbcType="VARCHAR"/>
        <result column="APPLY_TIME" property="applyTime" jdbcType="DATE"/>
        <result column="STATE" property="state" jdbcType="VARCHAR"/>
        <result column="ORDER_AUDIT_USER" property="orderAuditUser" jdbcType="VARCHAR"/>
        <result column="ORDER_AUDIT_TIME" property="orderAuditTime" jdbcType="DATE"/>
        <result column="PAY_AUDIT_USER" property="payAuditUser" jdbcType="VARCHAR"/>
        <result column="DATE_PAY_AUDIT_TIME" property="datePayAuditTime" jdbcType="DATE"/>
        <result column="APPLY_DESCRIBE" property="applyDescribe" jdbcType="VARCHAR"/>
        <result column="AUDIT_DESCRIBE" property="auditDescribe" jdbcType="VARCHAR"/>
    </resultMap>

    <!--将数据库里所有字段打包好，嵌入下列的sql语句中-->
    <sql id="Base_Column_List">
        ID,ID_NUMBER,GOODS_ID,GOODS_NUMBER,APPLY_USER,APPLY_TIME,STATE,ORDER_AUDIT_USER,
        ORDER_AUDIT_TIME,PAY_AUDIT_USER,DATE_PAY_AUDIT_TIME,APPLY_DESCRIBE,AUDIT_DESCRIBE
    </sql>
    <!--查找所有-->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_purchase_order
    </select>
    <!--获取id-->
    <select id="getById" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_purchase_order t
        WHERE t.ID=#{id}
    </select>
    <!--添加-->
    <insert id="insert" parameterType="com.gameloft9.demo.dataaccess.model.system.PurchaseOrderTest">
        INSERT INTO t_purchase_order(ID,ID_NUMBER,GOODS_ID,GOODS_NUMBER,APPLY_USER,APPLY_TIME,
        STATE,ORDER_AUDIT_USER,ORDER_AUDIT_TIME,PAY_AUDIT_USER,DATE_PAY_AUDIT_TIME,APPLY_DESCRIBE,
        AUDIT_DESCRIBE)
        VALUES #{id},#{idnumber},#{goodsid},#{goodsnumber},#{applyuser},#{applytime},#{state},
        #{orderaudituser},#{orderaudittime},#{payaudituser},#{datepayaudittime},#{applydescribe},
        #{auditdescribe}
    </insert>
    <!--删除-->
    <delete id="deleteById" parameterType="java.lang.String">
        DELETE FROM t_purchase_order
        WHERE ID = #{id}
    </delete>
    <!--修改-->
    <update id="updateById" parameterType="com.gameloft9.demo.dataaccess.model.system.PurchaseOrderTest">
        UPDATE t_purchase_order
        SET ID_NUMBER=#{idnumber},GOODS_ID=#{goodsid},GOODS_NUMBER=#{goodsnumber},APPLY_USER=#{applyuser},
        APPLY_TIME=#{applytime},STATE=#{state},ORDER_AUDIT_USER=#{orderaudituser},
        ORDER_AUDIT_TIME=#{orderaudittime},PAY_AUDIT_USER=#{payaudituser},
        DATE_PAY_AUDIT_TIME=#{datepayaudittime},APPLY_DESCRIBE=#{applydescribe},
        AUDIT_DESCRIBE=#{auditdescribe}
        WHERE ID = #{id}
    </update>
</mapper>
